@using credittrade.ViewModel
@{
    ViewBag.Title = "Заказы";
    Layout = "layout.cshtml";
}

<h1>Добро пожаловать, @Model.username!</h1>
<h2>@ViewBag.Title</h2>

<div class="dataTable_div col-md-9">
    <table id="requests_table" class="row-border">
        <thead>
            <tr>
                <th>№ заказа</th>
                <th>Покупатель</th>
                <th>Дата покупки</th>
                <th>Сумма</th>
                <th>Оплачен полностью</th>
                <th>Частично оплачено</th>
                <th>Дата оплаты</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (RequestViewModel request in Model.requests)
            {
                <tr>
                    <td>@request.id</td>
                    <td>@request.buyerFio</td>
                    <td>@request.date</td>
                    <td>@request.cost</td>
                    <td>@request.fullpaidmessage</td>
                    <td>@request.paidsum</td>
                    <td>@request.pay_date</td>
                    @if (request.fullpaid)
                    {
                        <td></td>
                        <td></td>
}
                    else
                    {
                        <td><a class="btn btn-primary" href="@Url.Content("~/requests/makepay/" + request.id)">Внести оплату</a></td>
                        <td><a class="btn btn-primary" href="@Url.Content("~/requests/makepay_partial/" + request.id)">Частичная оплата</a></td>
}
                    <td><a class="btn btn-primary" href="@Url.Content("~/requests/view/" + request.id)">Подробности</a></td>
                </tr>}
        </tbody>
    </table>
</div>
<script language="javascript">
    $("#requests_table").DataTable({
        "language": {
            "url": "@Url.Content("~/content/dataTables.ru.lang.json")"
        },
        paging: false,
        columnDefs: [{ orderable: false, targets: [6, 7] }],
        order: [[0, "desc"]]
    });
</script>